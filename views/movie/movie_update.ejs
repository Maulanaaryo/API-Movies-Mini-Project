<%- include('../header')%>
    <style>
        body {
            background-color: #000814;
        }

        form {
            max-width: 500px;
            margin: 0 auto;
            margin-top: 70px;
            padding: 20px;
            background-color: rgba(223, 191, 191, 0.1);
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
        }

        .form-label {
            font-size: 14px;
            text-align: left;
            color: white;
        }

        .form-control {
            font-size: 14px;
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: none;
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 3px;
            color: white;
            transition: background-color 0.3s;
        }

        .form-control:focus {
            background-color: rgba(255, 255, 255, 0.2);
        }

        .btn-primary {
            font-size: 14px;
            padding: 10px;
        }
    </style>
    </head>

    <body>
        <form action="/movies/update/<%= movie.id %>" method="post">
            <h3 class="text-center text-white">Update Movie</h3>
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" name="name" class="form-control" value="<%= movie.name %>" required>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image</label>
                <input type="text" name="image" class="form-control" value="<%= movie.image %>" required>
            </div>
            <div class="mb-3">
                <label for="year" class="form-label">Year</label>
                <input type="text" name="year" class="form-control" value="<%= movie.year %>" required>
            </div>
            <div class="mb-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="text" name="rating" class="form-control" value="<%= movie.rating %>" required>
            </div>
            <div class="mb-3">
                <label for="genreId" class="form-label">Genre</label>
                <select name="genreId" class="form-control" required>
                    <% genres.forEach(function(genre) { %>
                        <option value="<%= genre.id %>">
                            <%= genre.name %>
                        </option>
                        <% }); %>
                </select>
            </div>



            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        <%- include('../footer')%>