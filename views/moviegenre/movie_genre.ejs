<%- include('../header')%>
    <style>
        body {
            background-color: white;
            overflow-x: hidden;
        }

        table {
            width: 80%;
            margin: 0 auto;
        }

        th,
        td {
            text-align: center;
        }

        .navbar {
            background-color: #000814;
        }

        .navbar-text {
            color: white;
            font-size: 27px;
            margin-left: 10px;
        }

        .navbar-buttons {
            margin-left: auto;
        }

        .navbar-buttons .btn {
            margin-left: 10px;
        }

        .delete-icon,
        .add-icon {
            cursor: pointer;
        }
    </style>
    </head>

    <body>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <span class="navbar-text text-white" onclick="window.location.href='/'">Movie.com</span>
                <div class="navbar-buttons">
                    <a href="/movieGenres/add" class="btn btn-primary">Add</a>
                </div>
            </div>

        </nav>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Movie ID</th>
                    <th>Genre ID</th>
                </tr>
            </thead>
            <tbody>
                <% MG.forEach(movieGenre=> { %>
                    <tr>
                        <td>
                            <%= movieGenre.movieId %>
                        </td>
                        <td>
                            <%= movieGenre.genreId %>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
        <%- include('../footer')%>