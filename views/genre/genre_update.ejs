<%- include('../header')%>
    <style>
        body {
            background-color: #000814;
        }

        form {
            max-width: 500px;
            margin: 0 auto;
            margin-top: 150px;
            padding: 20px;
            background-color: rgba(223, 191, 191, 0.1);
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
        }

        .form-label {
            font-size: 14px;
            text-align: left;
            color: white;
        }

        .form-control {
            font-size: 14px;
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: none;
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 3px;
            color: white;
            transition: background-color 0.3s;
        }

        .form-control:focus {
            background-color: rgba(255, 255, 255, 0.2);
        }

        .btn-primary {
            font-size: 14px;
            padding: 10px;
        }
    </style>
</head>

<body>
    <form action="/genres/update/<%= genre.id %>" method="post">
        <h3 class="text-center text-white">Update Genre</h3>
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" name="name" class="form-control" value="<%= genre.name %>" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <%- include('../footer')%>