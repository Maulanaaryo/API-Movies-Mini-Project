<%- include('../header')%>
    <style>
        body {
            background-color: white;
            overflow-x: hidden;
        }

        .navbar {
            background-color: #000814;
        }

        .navbar-text {
            color: white;
            font-size: 27px;
            margin-left: 10px;
        }

        .navbar-buttons {
            margin-left: auto;
        }

        .navbar-buttons .btn {
            margin-left: 10px;
        }

        .navbar-center {
            flex-grow: 1;
            text-align: center;
        }

        .navbar-center-text {
            color: white;
            font-size: 35px;
        }

        .card {
            display: inline-block;
            width: 200px;
            margin: 10px;
            vertical-align: top;
            background-color: #4B5358;
        }

        .card-img-top {
            width: 100%;
            height: auto;
        }

        .card-title {
            text-align: center;
            color: white;
        }
    </style>
    </head>

    <body>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <span class="navbar-text text-white">Movie.com</span>
                <div class="navbar-center">
                    <span class="navbar-center-text">
                        <%= MG.name%>
                    </span>
                </div>
            </div>
        </nav>

        <div class="container">
            <div class="row">
                <% MG.movies.forEach(movie=> { %>
                    <div class="col-md-3">
                        <div class="card mb-3">
                            <img src="<%= movie.image %>" class="card-img-top">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= movie.name %>
                                </h5>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
        <%- include('../footer')%>